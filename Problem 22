#include <stdio.h>

int main() {
    float salary, bonus, final_salary;
    char gender;

    printf("Enter employee salary: ");
    scanf("%f", &salary);

    printf("Enter gender (M/F): ");
    scanf(" %c", &gender);

    if (gender == 'M' || gender == 'm') {
        bonus = salary * 0.05;
    }
    else if (gender == 'F' || gender == 'f') {
        bonus = salary * 0.10;
    }
    else {
        printf("Invalid gender entered!");
        return 0;
    }

    final_salary = salary + bonus;

    printf("\nBonus amount: %.2f", bonus);
    printf("\nFinal Salary: %.2f", final_salary);

    return 0;
}
