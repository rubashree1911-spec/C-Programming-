#include <stdio.h>

int main() {
    float hours, rate, salary, overtime;

    printf("Enter number of hours worked: ");
    scanf("%f", &hours);

    printf("Enter hourly rate: ");
    scanf("%f", &rate);

    if (hours <= 40) {
        salary = hours * rate;
    }
    else {
        overtime = hours - 40;
        salary = (40 * rate) + (overtime * 1.5 * rate);
    }

    printf("Total Salary: %.2f", salary);

    return 0;
}

