#include <stdio.h>

int main() {
    int choice;

    printf("Chocolate Menu\n");
    printf("1. Dairy Milk\n");
    printf("2. Dark Chocolate\n");
    printf("3. White Chocolate\n");
    printf("4. Caramel Chocolate\n");
    printf("Enter your choice (1-4): ");
    
    scanf("%d", &choice);

    if (choice == 1) {
        printf("You selected Dairy Milk.");
    }
    else if (choice == 2) {
        printf("You selected Dark Chocolate.");
    }
    else if (choice == 3) {
        printf("You selected White Chocolate.");
    }
    else if (choice == 4) {
        printf("You selected Caramel Chocolate.");
    }
    else {
        printf("Invalid choice! Please select between 1 and 4.");
    }

    return 0;
}
