#include <stdio.h>

int main() {
    float temp;

    printf("Enter temperature in Centigrade: ");
    scanf("%f", &temp);

    if (temp <= 0) {
        printf("Weather: Freezing weather");
    }
    else if (temp > 0 && temp <= 10) {
        printf("Weather: Very Cold weather");
    }
    else if (temp > 10 && temp <= 20) {
        printf("Weather: Cold weather");
    }
    else if (temp > 20 && temp <= 30) {
        printf("Weather: Normal temperature");
    }
    else if (temp > 30 && temp <= 40) {
        printf("Weather: Hot");
    }
    else {
        printf("Weather: Very Hot");
    }

    return 0;
}
