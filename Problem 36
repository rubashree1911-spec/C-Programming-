#include <stdio.h>

int main()
{
    float height;

    printf("Enter your height in cm: ");
    scanf("%f", &height);

    if(height < 150)
        printf("Category: Short\n");
    else if(height >= 150 && height < 170)
        printf("Category: Average Height\n");
    else if(height >= 170 && height < 190)
        printf("Category: Tall\n");
    else
        printf("Category: Very Tall\n");

    return 0;
}
