#include <stdio.h>

int main()
{
    int day, month, year;
    int days = 0;

    printf("Enter date (DD MM YYYY): ");
    scanf("%d %d %d", &day, &month, &year);

    // Simple validation
    if(month < 1 || month > 12 || day < 1 || day > 31)
    {
        printf("Invalid date");
        return 0;
    }

    // Quarter start month
    int startMonth;
    if(month <= 3)
        startMonth = 1;
    else if(month <= 6)
        startMonth = 4;
    else if(month <= 9)
        startMonth = 7;
    else
        startMonth = 10;

    // Calculate days passed in quarter (approximate 30 days per month)
    days = (month - startMonth) * 30 + day;

    // Determine season
    if((month == 3 && day >= 1) || month == 4 || month == 5)
        printf("Season: Spring\n");
    else if(month == 6 || month == 7 || month == 8)
        printf("Season: Summer\n");
    else if(month == 9 || month == 10 || month == 11)
        printf("Season: Autumn\n");
    else
        printf("Season: Winter\n");

    printf("Days passed in quarter: %d\n", days);

    return 0;
}
