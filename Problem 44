#include <stdio.h>

int main()
{
    float amount, discount;

    printf("Enter purchase amount: ");
    scanf("%f", &amount);

    if(amount < 1000)
        discount = amount * 0.05;
    else if(amount < 5000)
        discount = amount * 0.10;
    else
        discount = amount * 0.15;

    printf("Discount Amount = %.2f\n", discount);

    return 0;
}
